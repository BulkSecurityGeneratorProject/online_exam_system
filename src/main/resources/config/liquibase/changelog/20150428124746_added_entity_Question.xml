<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity Question.
    -->
    <changeSet id="20150428124746" author="jhipster">
        <createTable tableName="T_QUESTION">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="question_no" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="question_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="question_type" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="subject" type="varchar(255)"/>
            <column name="create_time" type="timestamp"/>
            <column name="last_update_time" type="timestamp"/>
            <column name="deleted" type="integer"/>
            <column name="code" type="varchar(255)"/>
            <column name="author" type="varchar(255)"/>
            <column name="option_a" type="varchar(255)"/>
            <column name="option_b" type="varchar(255)"/>
            <column name="option_c" type="varchar(255)"/>
            <column name="option_d" type="varchar(255)"/>
            <column name="answer" type="varchar(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <dropDefaultValue tableName="T_QUESTION" columnName="create_time" columnDataType="datetime"/>

        <dropDefaultValue tableName="T_QUESTION" columnName="last_update_time" columnDataType="datetime"/>

        
    </changeSet>
</databaseChangeLog>
